{
  "info": {
    "name": "BookCommunity API",
    "_postman_id": "bookcommunity-api-collection",
    "description": "BookCommunity 图书社区后端 API 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/douyin",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has token\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status_code).to.eql(0);",
                  "    pm.expect(jsonData.token).to.be.a('string');",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    pm.collectionVariables.set(\"user_id\", jsonData.user_id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/user/register/?username=testuser&password=password123",
              "host": ["{{baseUrl}}"],
              "path": ["user", "register", ""],
              "query": [
                {
                  "key": "username",
                  "value": "testuser"
                },
                {
                  "key": "password",
                  "value": "password123"
                }
              ]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Login successful\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status_code).to.eql(0);",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    pm.collectionVariables.set(\"user_id\", jsonData.user_id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/user/login/?username=testuser&password=password123",
              "host": ["{{baseUrl}}"],
              "path": ["user", "login", ""],
              "query": [
                {
                  "key": "username",
                  "value": "testuser"
                },
                {
                  "key": "password",
                  "value": "password123"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/user/?user_id={{user_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["user", ""],
              "query": [
                {
                  "key": "user_id",
                  "value": "{{user_id}}"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get Recommendations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/recommend?top_k=10",
              "host": ["{{baseUrl}}"],
              "path": ["recommend"],
              "query": [
                {
                  "key": "top_k",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Search Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/search?q=golang&top_k=5",
              "host": ["{{baseUrl}}"],
              "path": ["search"],
              "query": [
                {
                  "key": "q",
                  "value": "golang"
                },
                {
                  "key": "top_k",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "Get Book Detail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/book/9787111544937",
              "host": ["{{baseUrl}}"],
              "path": ["book", "9787111544937"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["health"]
        }
      }
    }
  ]
}
